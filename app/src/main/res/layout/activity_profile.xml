<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Back Icon"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/noprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:scaleType="centerCrop" />

    <!-- Name -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tatang"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tatangsuratang@gmail.com"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <!-- Phone -->
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+62857082615281"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Edit Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_phone"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="40dp">

        <!-- White Box Background -->
        <LinearLayout
            android:id="@+id/bg_white_box"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Edit Profile -->
            <TextView
                android:id="@+id/editProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onEditProfileClicked"/>

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- About App -->
            <TextView
                android:id="@+id/aboutApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About App"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onAboutAppClicked"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="650dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_blue2_button"
        android:text="Log Out"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

</RelativeLayout>
